{
  "name": "mask_api_midwayjs",
  "private": true,
  "version": "0.3.7",
  "description": "🎉 基于 Midwayjs 的管理系统后端接口服务",
  "author": "TsMask",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/TsMask/mask_api_midwayjs"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./bootstrap.js",
  "scripts": {
    "start:docker": "NODE_ENV=production pm2-runtime start ./bootstrap.js --name mask_api -i 2",
    "start:pm2": "NODE_ENV=production pm2 start ./bootstrap.js --name mask_api -i 2",
    "start": "NODE_ENV=production node ./bootstrap.js",
    "dev": "cross-env NODE_ENV=local midway-bin dev --ts",
    "test": "midway-bin test --ts",
    "cov": "midway-bin cov --ts",
    "lint": "mwts check",
    "lint:fix": "mwts fix",
    "ci": "npm run cov",
    "build": "midway-bin build -c"
  },
  "dependencies": {
    "@dropb/diskinfo": "^3.0.0",
    "@midwayjs/bootstrap": "^3.0.0",
    "@midwayjs/bull": "^3.0.0",
    "@midwayjs/core": "^3.0.0",
    "@midwayjs/cross-domain": "^3.0.0",
    "@midwayjs/jwt": "^3.0.0",
    "@midwayjs/koa": "^3.0.0",
    "@midwayjs/logger": "^3.0.0",
    "@midwayjs/redis": "^3.0.0",
    "@midwayjs/security": "^3.0.0",
    "@midwayjs/static-file": "^3.0.0",
    "@midwayjs/typeorm": "^3.0.0",
    "@midwayjs/upload": "^3.0.0",
    "@node-rs/bcrypt": "^1.7.3",
    "cron-parser": "^4.9.0",
    "dayjs": "^1.11.10",
    "exceljs": "^4.4.0",
    "mini-svg-data-uri": "^1.4.4",
    "mysql2": "^3.6.5",
    "nanoid": "^3.3.7",
    "svg-captcha": "^1.4.0",
    "typeorm": "~0.3.0",
    "ua-parser-js": "^1.0.37",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@midwayjs/cli": "^2.0.0",
    "@midwayjs/mock": "^3.0.0",
    "@types/jest": "^29.0.0",
    "@types/koa": "^2.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^18.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.0.0",
    "mwts": "^1.3.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.3.3"
  },
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ]
}
