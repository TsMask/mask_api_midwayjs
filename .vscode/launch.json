        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\bootstrap.js",
            "preLaunchTask": "pm2 start",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
